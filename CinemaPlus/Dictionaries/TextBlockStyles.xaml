<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MyTextBlockStyle" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap"></Setter>
        <Setter Property="ClipToBounds" Value="True"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="FontFamily" Value="\Fonts\#Ponder-Black"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="FontWeight" Value="Medium"></Setter>
        <Setter Property="TextAlignment" Value="Left"></Setter>
        <Setter Property="Foreground" Value="{StaticResource seventhColor}"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Width" Value="265"></Setter>
    </Style>

    <Style x:Key="MyTextBlockStyle2" TargetType="TextBlock" BasedOn="{StaticResource MyTextBlockStyle}">
        <Setter Property="Foreground" Value="{StaticResource sixthColor}" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Width" Value="156.25" />
        <Setter Property="Height" Value="51.25" />
        <Setter Property="Margin" Value="0,0,0,0" />
    </Style>
</ResourceDictionary>